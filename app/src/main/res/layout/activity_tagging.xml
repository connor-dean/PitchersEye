        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/txt_pitcher_name_label"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_change_pitcher"
