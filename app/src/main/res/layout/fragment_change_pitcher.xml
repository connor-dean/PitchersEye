<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTaggingBackground"
    tools:context="pitcherseye.pitcherseye.Tagging.TaggingActivity"
    android:focusableInTouchMode="true" >

    <View
        android:id="@+id/view_event_header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/ichabodNavyBlue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_change_pitcher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/string_change_pitcher"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spin_change_pitcher_names"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_event_header" />

    <Button
        android:id="@+id/btn_confirm_pitcher_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tagging_button"
        android:text="@string/string_confirm"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spin_change_pitcher_names"
        app:layout_constraintStart_toStartOf="@+id/spin_change_pitcher_names"
        app:layout_constraintTop_toBottomOf="@+id/spin_change_pitcher_names" />

</android.support.constraint.ConstraintLayout>
