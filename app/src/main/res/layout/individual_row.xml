<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:padding="16dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/txt_event_stats_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="title"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_event_stats_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
            android:id="@+id/txt_stats_event_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Type: "/>

            <TextView
                android:id="@+id/txt_stats_event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type"/>

            <TextView
                android:id="@+id/txt_stats_event_location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Location: "/>

            <TextView
                android:id="@+id/txt_stats_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"/>

        </LinearLayout>

</LinearLayout>
